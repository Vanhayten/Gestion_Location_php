<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    android:padding="5dp"
    android:orientation="vertical"
    android:scrollbars="horizontal"
    android:layout_gravity="center">


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="475dp"
        android:background="@color/colorPrimaryDark"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp">

            <EditText
                android:id="@+id/text_nom1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:hint="Nom Client"
                android:textColor="@color/NAVwhite"
                android:textColorHint="@color/NAVwhite"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/text_prenom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:enabled="false"
                android:hint="Prenom"
                android:textColor="@color/NAVwhite"
                android:textColorHint="@color/NAVwhite"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/text_cin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:hint="Cin ou Num passport"
                android:textColor="@color/NAVwhite"
                android:textColorHint="@color/NAVwhite"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/text_tel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:hint="Telephone"
                android:textColor="@color/NAVwhite"
                android:textColorHint="@color/NAVwhite"
                android:textSize="18dp" />
            <EditText
                android:id="@+id/text_adr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:hint="Adresse "
                android:textColor="@color/NAVwhite"
                android:textColorHint="@color/NAVwhite"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/text_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:hint="ActivitÃ©"
                android:textColor="@color/NAVwhite"
                android:textColorHint="@color/NAVwhite"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/text_dateDebut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:hint="Date Debut"
                android:textColor="@color/NAVwhite"
                android:textColorHint="@color/NAVwhite"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/text_dateFin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:hint="Date Fin"
                android:textColor="@color/NAVwhite"
                android:textColorHint="@color/NAVwhite"
                android:textSize="18dp" />
            <EditText
                android:id="@+id/text_nbJour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:hint="Nobre jour"
                android:textColor="@color/NAVwhite"
                android:textColorHint="@color/NAVwhite"
                android:textSize="18dp" />
            <EditText
                android:id="@+id/text_Prix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:hint="Prix"
                android:textColor="@color/NAVwhite"
                android:textColorHint="@color/NAVwhite"
                android:textSize="18dp" />

            <Spinner
                android:id="@+id/text_typePayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type Payment"
                android:textColorHint="@color/NAVwhite"
                android:textColor="@color/NAVwhite"
                android:layout_marginTop="5sp"
                android:textSize="18dp" />
            <Spinner
                android:id="@+id/text_matriculeChoisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Matricule"
                android:textColorHint="@color/NAVwhite"
                android:textColor="@color/NAVwhite"
                android:layout_marginTop="5sp"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/les_matricules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/NAVwhite"
                android:textColor="@color/NAVwhite"
                android:layout_marginTop="5sp"
                android:textSize="18dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            >
            <Button
                android:id="@+id/btn_ajouterClient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmer"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/button_style"
                android:textColor="@color/NAVwhite"
                android:layout_marginRight="18dp"/>


        </LinearLayout>

    </LinearLayout>
</ScrollView>