<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/ic_baseline_keyboard_arrow_down_24</item>
        <item name="android:color">@color/NAVwhite</item>
    </style>
    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/NAVwhite</item>
    </style>

    <style name="PauseDialogAnimation">

        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>


    <style name="TextSecondaryHeadingStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/source_sans_pro_regular</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/text_secondary_heading</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextPrimaryBodyStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/text_primary_body</item>
    </style>

    <style name="TextPrimaryCaptionStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/text_primary_caption</item>
    </style>

    <style name="TextPrimaryButtonStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/source_sans_pro_regular</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/text_primary_button</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>


